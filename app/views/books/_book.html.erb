<div id="<%= dom_id book %>" class="flex flex-col rounded-lg overflow-hidden">
  <% if book.image_url.present? %>
    <img src="<%= book.image_url %>" 
         alt="<%= book.book_name %>" 
         class="w-full h-64 object-cover"
         loading="lazy">
  <% else %>
    <div class="w-full h-64 bg-gray-200 flex items-center justify-center">
      <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
      </svg>
    </div>
  <% end %>
  
  <div class="p-6 flex-1">
    <h2 class="text-xl font-bold text-gray-900 mb-2 line-clamp-1 hover:line-clamp-none transition-all duration-200">
      <%= book.book_name %>
    </h2>
    <p class="text-gray-600 text-sm mb-4 italic">by <%= book.author_name %></p>
    
    <%= link_to book_path(book), 
        class: "inline-flex items-center text-blue-600 hover:text-blue-800 font-medium group transition-all duration-200" do %>
      View Details
      <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
    <% end %>
  </div>
</div>
