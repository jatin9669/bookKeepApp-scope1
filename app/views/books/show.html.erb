<% content_for :title, "Showing book" %>

<div class="md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-4xl mb-6">Showing book</h1>

  <%= render @book %>

  <div class="flex items-center gap-3 mt-6">
    <% if user_signed_in? && current_user.is_admin? %>
      <%= link_to "Edit this book", edit_book_path(@book), class: "rounded-md px-4 py-2 bg-gray-100 hover:bg-gray-50 font-medium transition-colors" %>
      <%= button_to "Destroy this book", @book, 
          method: :delete, 
          class: "rounded-md px-4 py-2 text-white bg-red-600 hover:bg-red-500 font-medium transition-colors", 
          data: { turbo_confirm: "Are you sure?" } %>
    <% end %>
    <%= link_to "Back to books", books_path, class: "rounded-md px-4 py-2 bg-gray-100 hover:bg-gray-50 font-medium transition-colors" %>
  </div>
</div>
